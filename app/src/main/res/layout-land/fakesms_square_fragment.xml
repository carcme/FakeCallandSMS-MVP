<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/smsCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="@dimen/margin_counter"
            android:textColor="@color/almostWhite"
            tools:text="1/26"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/margin_standard"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:background="@drawable/custom_border"
                    android:orientation="vertical"
                    >
                    <!--

                    <Button
                        android:id="@+id/ringtoneBtn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_music_lib"
                        android:text="@string/select_ringtone"
                        android:textColor="@color/controlDisabled"
                        android:textSize="20sp"/>
                    -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/contactNameTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:visibility="visible"
                            tools:text="@string/contacts"/>

                        <ImageView
                            android:id="@+id/contactBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_person"
                            />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/smsNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_number"
                        android:inputType="phone"
                        android:maxEms="20"
                        android:maxLines="1"
                        android:textColorHint="@color/controlDisabled"
                        android:textSize="16sp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/smsMsg"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_standard"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_weight="1"

                    android:background="@drawable/custom_border"
                    android:gravity="top|start"
                    android:hint="@string/type_your_message"
                    android:inputType="textMultiLine|textCapSentences"
                    android:padding="@dimen/margin_small"
                    android:textColorHint="@color/controlDisabled"
                    android:textSize="20sp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/date_time_layout"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_standard"/>

                <include
                    layout="@layout/sms_buttons_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>